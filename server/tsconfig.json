{
    "compilerOptions": {
      "target": "ES2022",
      "module": "ESNext",
      "moduleResolution": "Node",
      "outDir": "dist",
      "rootDir": "./",
      "esModuleInterop": true,
      "resolveJsonModule": true,
      "strict": true,
      "skipLibCheck": true,
      "baseUrl": ".",
      "paths": {
        "@shared/*": ["../shared/*"]
      },
      "typeRoots": ["./types", "../node_modules/@types"]
    },
    "include": ["index.ts", "**/*.ts", "types"]
  }
  